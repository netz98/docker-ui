{% set navigation_bar = [['container_list', 'Containers'], ['image_list', 'Images']] %}
{% set active_page = active_page|default('home') %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Docker UI</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ app.request.baseUrl }}/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="shortcut icon" href="{{ app.request.baseUrl }}/images/favicon.png" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<div class="page-header" style="padding-left: 10px;">
    <img src="{{ app.request.baseUrl }}/images/docker-logo.png" alt="Docker Logo" />
</div>

<div class="container-fluid">
    <!-- Navigation -->
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills" role="tablist">
                {% for item in navigation_bar %}
                    <li{% if item[0] == active_page %} class="active"{% endif%}>
                        <a href="{{ app.url_generator.generate(item[0]) }}">{{item[1]}}</a>
                    </li>
                {% endfor %}
            </ul>
            </ul>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div><!-- /.container -->

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ app.request.baseUrl }}/components/jquery/dist/jquery.min.js"></script>
<script src="{{ app.request.baseUrl }}/components/bootstrap/dist/js/bootstrap.min.js"></script>

{% block body_end %}
{% endblock %}

</body>
</html>
