{% extends 'layout.html.twig' %}
{% import "_format.html.twig" as format %}

{% block content %}
<div>
    <table id="container_list" class="table table-hover table-bordered">
            <tr>
                <th>Name</th>
                <th>Port-Binding (Container => Host)</th>
                <th style="text-align:center">Status</th>
                <th></th>
            </tr>
            <tr ng-repeat="container in containers">
                <td>{{ '{{ container.name }}' }}</td>
                <td>
                    <ul>
                       <li ng-repeat="(portBindingName, portBindingData) in container.portBindings">
                           {{ '{{ portBindingName }}' }} => {{ '{{ portBindingData.0.HostIp }}' }}:{{ '{{ portBindingData.0.HostPort }}' }}
                       </li>
                    </ul>
                </td>
                <td>{{ '{{ container.state }}' }}</td>
                <td>
                    <button ng-click="" ng-if="container.state == 'running'" rel="{{ '{{ container.id }}' }}" type="button" class="btn btn-default glyphicon glyphicon-stop" title="Stop container"></button>
                    <button ng-if="container.state != 'running'" rel="{{ '{{ container.id }}' }}" type="button" class="btn btn-default glyphicon glyphicon-play" title="Start container"></button>
                </td>
            </tr>
    </table>
</div>
{% endblock %}